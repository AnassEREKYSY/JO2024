<%- include('../../layouts/header') %>

<%- include('../../layouts/navBar') %>

<div class="flex items-center justify-center bg-gray-100 h-screen px-8 py-6 w-full">

  <form class="flex flex-col space-y-4 w-full max-w-2xl px-8 py-6 bg-white rounded-lg shadow-md md:w-full" onsubmit="addResultat(event);">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Ajouter l'athléte à une epreuve</h1>
  
    <div class="grid grid-cols-2 gap-4">
      <div class="flex flex-col">
        <label for="epreuve_id" class="text-sm font-medium text-gray-700">Epreuve:</label>
        <select id="epreuve_id" name="epreuve_id" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500 mt-2" required>
            <option value="">- Select -</option>

            <% epreuves.forEach(epreuve => { %>
                <option value="<%= epreuve.id %>"><%= epreuve.sport.name %> - <%= epreuve.label %></option>
            <% }) %>
           
        </select>
      </div>
      <div class="flex flex-col">
        <label for="athlete_id" class="text-sm font-medium text-gray-700">Athléte:</label>
        <select id="athlete_id" name="athlete_id" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500 mt-2" required>
            <option value=""></option>
            <% athletes.forEach(athlete => { %>
                <option value="<%= athlete.id %>"><%= athlete.nom %> <%= athlete.prenom %></option>
            <% }) %>
           
        </select>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
        <div class="flex flex-col">
          <label for="performance" class="text-sm font-medium text-gray-700">Performance:</label>
          <input type="number" id="performance" name="performance" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500 mt-2" maxlength="20" required>
        </div>
        <div class="flex flex-col">
          <label for="position" class="text-sm font-medium text-gray-700 ">Rang:</label>
          <input type="number" id="position" name="position" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500 mt-2" maxlength="20" required>
        </div>
    </div>

    <button type="submit" class="flex w-full justify-center rounded-md bg-neutral-800 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-neutral-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-neutral-800">Sauvegarder</button>

  
  </form>

</div>

<script src="/js/resultats/add-resultats.js"></script>


  


<%- include('../../layouts/footer') %>  
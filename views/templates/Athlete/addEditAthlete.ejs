<%- include('../../layouts/header') %>

<%- include('../../layouts/navBar') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-8 py-6 w-full pt-24">

  <form class="flex flex-col space-y-4 w-full max-w-2xl px-8 py-6 bg-white rounded-lg shadow-md md:w-full" onsubmit="addAthlete(event)" enctype="multipart/form-data">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-4">Informations de l'Athléte</h1>
  
    <div class="grid grid-cols-2 gap-4">
      <div class="flex flex-col">
        <label for="nom" class="text-sm font-medium text-gray-700">Nom:</label>
        <input type="text" id="nom" name="nom" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500" maxlength="20" required>
      </div>
      <div class="flex flex-col">
        <label for="prenom" class="text-sm font-medium text-gray-700">Prénom:</label>
        <input type="text" id="prenom" name="prenom" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500" maxlength="20" required>
      </div>
    </div>
  
    <div class="grid grid-cols-1 gap-4"> 
      <div class="flex flex-col">
        <label for="date_naissance" class="text-sm font-medium text-gray-700">Date de naissance:</label>
        <input type="date" id="date_naissance" name="date_naissance" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500" required>
      </div>
    </div>


    <div class="col-span-full">
      <label for="photo" class="block text-sm font-medium leading-6 text-gray-900">Photo</label>
      <div class="mt-2 flex items-center gap-x-3">
        <div id="image-holder">
          <svg class="h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
          </svg>
        </div>
        <label for="photo" class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer">Change</label>
        <input type="file" id="photo" name="photo" class="hidden" accept="image/*">
      </div>
    </div>
  
    
    <div class="grid grid-cols-2 gap-4">
        <div class="flex flex-col">
          <label for="sex" class="text-sm font-medium text-gray-700">Sexe:</label>
          <select id="sex" name="sex" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500 w-full" required>
            <option value="M">Homme</option>
            <option value="F">Femme</option>
          </select>
        </div>
        <div class="flex flex-col">
          <label for="pays_id" class="text-sm font-medium text-gray-700">Pays:</label>
          <select id="pays_id" name="pays_id" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500" required>
              <option value="">- Select -</option>
              <% pays.forEach(pays_el => { %>
              <option value="<%= pays_el.id %>"><%= pays_el.label %></option>
              <% }) %>
          </select>
        </div>
        <div class="flex flex-col">
          <label for="sport_id" class="text-sm font-medium text-gray-700">Sports:</label>
          <select id="sport_id" name="sport_id" class="rounded-md border border-gray-300 p-2 focus:outline-none focus:ring-1 focus:ring-blue-500" required>
              <option value="">- Select -</option>
              <% sports.forEach(sport => { %>
              <option value="<%= sport.id %>"><%= sport.name %></option>
              <% }) %>
          </select>
        </div>
    </div>
  
    <button type="submit" class="flex w-full justify-center rounded-md bg-neutral-800 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-neutral-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-neutral-800">Sauvegarder</button>
  </form>

  <script src="/js/athletes/add-athlete.js"></script>

</div>


  


<%- include('../../layouts/footer') %>  